<h1>Inventory</h1>

<div>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Stock Available</th>
            <th>Unit Price</th>
            <th>Stock Value</th>
            <th>Stock Sold</th>
            <th>Selling Price</th>
            <th>Sold Value</th>
            <th></th>
            <th></th>
        </tr>
        <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.description %></td>
                <td><%= item.stock_avail %></td>
                <td><%= number_to_currency(item.unit_price) %></td>
                <td><%= number_to_currency(item.stock_value) %></td>
                <td><%= item.stock_sold %></td>
                <td><%= number_to_currency(item.sell_price) %></td>
                <td><%= number_to_currency(item.sold_value) %></td>
                <td><%= link_to "Edit", edit_inventory_path(item) %></td>
                <td><%= link_to "Delete", "/inventory/#{item.id}/confirm_destroy" %></td>
            </tr>
        <% end %>
    </table>
</div>

<div>
    <br>
    <%= link_to "Add an item", new_inventory_path %>
    <br>
    <%= link_to "Download CSV", "/inventory.csv" %>
</div>